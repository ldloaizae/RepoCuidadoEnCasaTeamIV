@page
@model AgendamientoCitas.App.Frontend.Pages.Encuestas.IndexModel
@{
}
<h1>Listado Encuestas</h1>
<a class="btn btn-primary" asp-page="./Create">Nueva Encuesta</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Sintomas</th>
            <th scope="col">Modalidad de Atencion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var encuesta in Model.encuestas)
        {
           <tr>
               <td>@encuesta.Sintomas</td>
               <td>@encuesta.ModalidadAtencion</td>               
               <td>
                   <a class="btn btn-primary" asp-page="./Details" asp-route-id="@encuesta.Id">
                    Detalle
                   </a>
                   <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@encuesta.Id">
                    Editar
                   </a>
               </td>
           </tr>   
        }
    </tbody>
</table>